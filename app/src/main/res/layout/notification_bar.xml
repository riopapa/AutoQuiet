<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_customNotification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    tools:ignore="ContentDescription"
    android:orientation="vertical">

    <LinearLayout
        android:background="#604E6A83"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="1dp"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content">

        <ImageView
            android:id="@+id/state_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="6dp"
            android:layout_gravity="center"
            android:src="@drawable/auto_quite" />

        <TextView
            android:id="@+id/calSubject"
            android:padding="2dp"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:textColor="@color/colorNotification"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="#00000000"
            android:text="@string/subject_name"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/beg_time"
            android:padding="2dp"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:textColor="@color/colorNotification"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="#00000000"
            android:text="@string/subject_name"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/a_minute"
            android:layout_gravity="center"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:src="@drawable/alarm_off"
            />
        <ImageView
            android:id="@+id/right_now"
            android:layout_gravity="center"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="2dp"
            android:visibility="gone"
            android:src="@drawable/right_now" />

    </LinearLayout>
    <LinearLayout
        android:background="#805F7288"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content">

        <ImageView
            android:id="@+id/volumes"
            android:layout_gravity="center"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/volumes" />

        <ImageView
            android:id="@+id/state_iconN"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/auto_quite" />

        <TextView
            android:id="@+id/calSubjectN"
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:textColor="@color/colorNotification"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="2dp"
            android:text="@string/subject_name"
            android:textSize="@dimen/notification_text" />

        <ImageView
            android:id="@+id/five_minute"
            android:layout_gravity="center"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="0dp"
            android:background="#82222222"
            android:src="@drawable/alarm_5off"
            />

        <TextView
            android:id="@+id/beg_timeN"
            android:padding="2dp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:textColor="@color/colorNotification"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@string/subject_name"
            android:textSize="@dimen/notification_text" />

    </LinearLayout>
</LinearLayout>
