<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_customNotification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    tools:ignore="ContentDescription"
    android:orientation="horizontal">
    <LinearLayout
        android:background="#00000000"
        android:orientation="vertical"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="4dp"
        android:layout_width = "0dp"
        android:layout_weight="2"
        android:layout_height = "wrap_content">

        <ImageView
            android:id="@+id/state_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/auto_quite" />

        <ImageView
            android:id="@+id/state_iconN"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/auto_quite" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="0dp"
        android:layout_width = "0dp"
        android:layout_weight="10"
        android:layout_height = "wrap_content">

        <TextView
            android:id="@+id/calSubject"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:textColor="@color/colorNotification"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="#00000000"
            android:text="@string/subject_name"
            android:textSize="@dimen/notification_text" />

        <TextView
            android:id="@+id/calSubjectN"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:textColor="@color/colorNotification"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="4dp"
            android:background="#82222222"
            android:text="@string/subject_name"
            android:textSize="@dimen/notification_text" />

    </LinearLayout>

    <LinearLayout
        android:background="#00000000"
        android:orientation="vertical"
        android:layout_marginBottom="0dp"
        android:layout_width = "0dp"
        android:layout_weight="6"
        android:layout_height = "wrap_content">

        <TextView
            android:id="@+id/beg_time"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:textColor="@color/colorNotification"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="#00000000"
            android:text="@string/subject_name"
            android:textSize="@dimen/notification_text" />

        <TextView
            android:id="@+id/beg_timeN"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:textColor="@color/colorNotification"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="#82222222"
            android:text="@string/subject_name"
            android:textSize="@dimen/notification_text" />

    </LinearLayout>


    <LinearLayout
        android:background="#00000000"
        android:orientation="vertical"
        android:layout_marginBottom="0dp"
        android:layout_width = "0dp"
        android:layout_weight="2"
        android:layout_height = "wrap_content">

        <ImageView
            android:id="@+id/to_toss"
            android:layout_gravity="center"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:src="@drawable/alarm_off"
            />
        <ImageView
            android:id="@+id/right_now"
            android:layout_gravity="center"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="4dp"
            android:visibility="gone"
            android:src="@drawable/right_now" />
    </LinearLayout>
</LinearLayout>
