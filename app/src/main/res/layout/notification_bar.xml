<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_customNotification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    tools:ignore="ContentDescription"
    android:orientation="vertical">

    <LinearLayout
        android:background="#4B5673"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content">
        <ImageView
            android:id="@+id/state_icon"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="32dp"
            android:layout_margin="2dp"
            android:src="@drawable/auto_quite" />

        <TextView
            android:id="@+id/calSubject"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="12"
            android:textColor="@color/colorNotification"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@string/subject_name"
            android:textSize="14sp" />
            <TextView
                android:id="@+id/beg_time"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:textColor="@color/colorNotification"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text = "@string/date_time"
                android:textSize="12sp" />

        <ImageView
            android:id="@+id/to_toss"
            android:layout_gravity="center"
            android:layout_width="0sp"
            android:layout_weight="4"
            android:layout_height="32dp"
            android:layout_margin="2dp"
            android:src="@drawable/toss64s"
            />

    </LinearLayout>

    <LinearLayout
        android:background="#8F465884"
        android:orientation="horizontal"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="28dp"
            android:layout_margin="2dp"
            android:src="@drawable/next_task" />

        <ImageView
            android:id="@+id/state_iconN"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="32dp"
            android:layout_margin="2dp"
            android:src="@drawable/auto_quite" />

        <TextView
            android:id="@+id/calSubjectN"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="12"
            android:textColor="@color/colorNotification"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@string/subject_name"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/beg_timeN"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:textColor="@color/colorNotification"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="@string/date_time"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/right_now"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="32dp"
            android:layout_margin="2dp"
            android:src="@drawable/right_now" />

        <ImageView
            android:id="@+id/no_speak"
            android:layout_gravity="center"
            android:layout_width="0sp"
            android:layout_weight="6"
            android:layout_height="32dp"
            android:layout_margin="2dp"
            android:src="@drawable/stop_talking"
            />

    </LinearLayout>

</LinearLayout>