<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_agenda"
    android:id="@+id/one_agenda"
    android:layout_margin="0dp"
    android:orientation="horizontal"
    android:baselineAligned="false">
<!-- Date/ day   -->
    <LinearLayout
        android:id="@+id/aDateDay"
        android:layout_width="40sp"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/aDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/aDat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ëª©"
            android:textSize="@dimen/week_time"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>
    <!--  time start finish  -->
    <LinearLayout
        android:id="@+id/aDateTime"
        android:layout_width="60sp"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/aSTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HH:mm"
            android:textSize="@dimen/week_time"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/aFTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hh_mm"
            android:textSize="@dimen/week_time"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>
<!--  Subject, loc, desc  -->
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="18"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/rmdSubject"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:text="@string/subject"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/repeating"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/repeating"
                android:contentDescription="repeating" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/calInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/calLoc"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:text="location"
                />
            <TextView
                android:id="@+id/calDesc"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:text="desc"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
