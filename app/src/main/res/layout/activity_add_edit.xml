            android:layout_margin = "1dp"
            android:clickable = "true"
            android:gravity = "center_vertical"
            android:onClick = "toggleWeek"
            android:padding = "1dp"
            android:tag = "0"
            android:text = "@string/week_0"
            android:textSize = "@dimen/edit_week" />

        <TextView
            android:id = "@+id/av_week1"
