<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              xmlns:tools = "http://schemas.android.com/tools"
              android:id = "@+id/addUpdate"
              android:orientation="vertical"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent">
    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">
        <TextView
            android:id = "@+id/typeDesc"
            android:layout_width = "0dp"
            android:layout_weight="1"
            android:layout_height = "wrap_content"
            android:layout_margin = "2dp"
            android:gravity = "center"
            android:padding = "4dp"
            android:background="#DDDDDD"
            android:text = "@string/end_time"
            android:textSize = "20sp"
            android:textColor="#000"
            android:textStyle = "bold" />
        <ImageView
            android:id="@+id/alarm_type"
            android:layout_width = "32dp"
            android:layout_height = "32dp"
            android:src="@drawable/bell_onetime"
            android:scaleType="fitXY"
            android:layout_margin="4dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:gravity = "center">

        <TextView
            android:id="@+id/txt_beg"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_margin = "2dp"
            android:layout_weight = "1"
            android:gravity = "center"
            android:padding = "4dp"
            android:text = "@string/start_time"
            android:textSize = "24sp"
            android:textStyle = "bold" />

        <TextView
            android:id="@+id/txt_end"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_margin = "2dp"
            android:layout_weight = "1"
            android:gravity = "center"
            android:padding = "4dp"
            android:text = "@string/end_time"
            android:textSize = "24sp"
            android:textStyle = "bold" />

    </LinearLayout>

    <LinearLayout
        android:id = "@+id/timeTicker"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:gravity = "center"
        android:orientation = "horizontal">

        <TimePicker
            android:id = "@+id/timePickerBeg"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:headerTimeTextAppearance = "@style/TextAppearance.AppCompat.Display2"
            android:theme = "@style/NumberPickerStyle"
            android:timePickerMode = "spinner"
            tools:animateLayoutChanges = "@tools:sample/date/hhmm" />

        <TimePicker
            android:id = "@+id/timePickerEnd"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:headerTimeTextAppearance = "@style/TextAppearance.AppCompat.Display2"
            android:theme = "@style/NumberPickerStyle"
            android:timePickerMode = "spinner"
            tools:animateLayoutChanges = "@tools:sample/date/hhmm" />
    </LinearLayout>

    <LinearLayout
