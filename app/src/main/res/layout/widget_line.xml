<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wLine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    tools:ignore="ContentDescription"
    android:orientation="vertical">

    <LinearLayout
        android:background="#604E6A83"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="12dp"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content">

        <ImageView
            android:id="@+id/wState"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="1dp"
            android:layout_gravity="center"
            android:src="@drawable/auto_quite" />

        <TextView
            android:id="@+id/wTime"
            android:padding="2dp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:textColor="@color/colorNotification"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@string/subject_name"
            android:textSize="@dimen/notification_text" />

    </LinearLayout>
    <LinearLayout
        android:background="#80114179"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content">

        <TextView
            android:id="@+id/wSubject"
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:textColor="@color/colorNotification"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="2dp"
            android:text="@string/subject_name"
            android:textSize="@dimen/notification_text" />

    </LinearLayout>
</LinearLayout>
