<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/one_reminder"
    android:layout_margin="2dp"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <!--  alert, speak  -->
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="56dp"
        android:layout_margin="3dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/lv_vibrate"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/phone_vibrate"
            android:contentDescription="@string/blank" />
        <LinearLayout
            android:id="@+id/llBegEnd"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/lvBegLoop"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="0dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/speak_on"
            android:contentDescription="@string/blank" />
        <ImageView
            android:id="@+id/lvEndLoop"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="2dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/speak_on"
            android:contentDescription="@string/blank" />
        </LinearLayout>
    </LinearLayout>
    <!--  hour, min  -->
    <LinearLayout
        android:id="@+id/begEndTime"
        android:layout_width="54sp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/rmdBegTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hh_mm"
            android:textSize="@dimen/week_time"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/rmdEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hh_mm"
            android:textSize="@dimen/week_time"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <!-- subject, week flag -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gCal"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="@string/blank"
                android:src="@drawable/calendar" />

            <TextView
                android:id="@+id/rmdSubject"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/subject"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/rmdDate"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="날짜"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/weekFlag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lt_week0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/week_size"
                android:layout_margin="@dimen/week_margin"
                android:paddingStart="@dimen/week_padding"
                android:paddingEnd="@dimen/week_padding"
                android:text="@string/week_0"
                android:gravity="fill"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/lt_week1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/week_size"
                android:layout_margin="@dimen/week_margin"
                android:paddingStart="@dimen/week_padding"
                android:paddingEnd="@dimen/week_padding"
                android:text="@string/week_1"
                android:gravity="fill"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/lt_week2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/week_size"
                android:layout_margin="@dimen/week_margin"
                android:paddingStart="@dimen/week_padding"
                android:paddingEnd="@dimen/week_padding"
                android:gravity="fill"
                android:text="@string/week_2" />
            <TextView
                android:id="@+id/lt_week3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/week_size"
                android:layout_margin="@dimen/week_margin"
                android:paddingStart="@dimen/week_padding"
                android:paddingEnd="@dimen/week_padding"
                android:text="@string/week_3"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/lt_week4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/week_size"
                android:layout_margin="@dimen/week_margin"
                android:paddingStart="@dimen/week_padding"
                android:paddingEnd="@dimen/week_padding"
                android:text="@string/week_4"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/lt_week5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/week_size"
                android:layout_margin="@dimen/week_margin"
                android:paddingStart="@dimen/week_padding"
                android:paddingEnd="@dimen/week_padding"
                android:text="@string/week_5"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/lt_week6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/week_size"
                android:layout_margin="@dimen/week_margin"
                android:paddingStart="@dimen/week_padding"
                android:paddingEnd="@dimen/week_padding"
                android:text="@string/week_6"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
<!--  location, desc  -->
        <LinearLayout
            android:id="@+id/calInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/calLeft"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:text="location"
                />
            <TextView
                android:id="@+id/calRight"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:text="date"
                android:textSize="16sp"
                android:textColor="@color/colorOn"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>