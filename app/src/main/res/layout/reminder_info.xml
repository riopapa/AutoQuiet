<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_normal"
    android:id="@+id/one_reminder"
    android:layout_margin="0dp"
    android:orientation="horizontal">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/lv_vibrate"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="0dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@mipmap/phone_vibrate_blue"
            android:contentDescription="@string/blank" />
        <ImageView
            android:id="@+id/lv_speak"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@mipmap/speaking_on"
            android:contentDescription="@string/blank" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="18"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rmdSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/subject"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/lt_week0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_margin="@dimen/week_margin"
                        android:paddingStart="@dimen/week_padding"
                        android:paddingEnd="@dimen/week_padding"
                        android:text="@string/week_0"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/lt_week1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_margin="@dimen/week_margin"
                        android:paddingStart="@dimen/week_padding"
                        android:paddingEnd="@dimen/week_padding"
                        android:text="@string/week_1"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/lt_week2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/week_margin"
                        android:paddingStart="@dimen/week_padding"
                        android:paddingEnd="@dimen/week_padding"
                        android:text="@string/week_2"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/lt_week3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_margin="@dimen/week_margin"
                        android:paddingStart="@dimen/week_padding"
                        android:paddingEnd="@dimen/week_padding"
                        android:text="@string/week_3"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/lt_week4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="18sp"
                        android:layout_margin="@dimen/week_margin"
                        android:paddingStart="@dimen/week_padding"
                        android:paddingEnd="@dimen/week_padding"
                        android:text="@string/week_4"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/lt_week5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_margin="@dimen/week_margin"
                        android:paddingStart="@dimen/week_padding"
                        android:paddingEnd="@dimen/week_padding"
                        android:text="@string/week_5"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/lt_week6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_margin="@dimen/week_margin"
                        android:paddingStart="@dimen/week_padding"
                        android:paddingEnd="@dimen/week_padding"
                        android:text="@string/week_6"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rmdStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hh_mm"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/rmdFinishTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hh_mm"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>